{
  "name": "dzordi-panel",
  "version": "1.0.1",
  "description": "Professional FiveM mod management panel with Discord authentication",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "package-win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Dzordi Community",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "boxicons": "^2.1.4",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "node-fetch": "^2.6.6"
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.dzordi.panel",
    "productName": "Dzordi Panel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
